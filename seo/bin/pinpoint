#!/bin/bash

#get path to this script
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source $DIR/utils

#command for plate solving, auto-offset script?
AUFFSET="python $DIR/auffset.py"

function point {
    #check parameters
    if [ $# -lt 2 ]
    then
        echo "This routine precisely (pin) points the telescope."
        echo "Usage: pinpoint <ra> <dec>"
        exit 1
    fi
    #echo $1 $2
    tx track on > /dev/null 2>&1
    alert "Pointing telescope to target..."
    tx point ra=$1 dec=$2 > /dev/null 2>&1
    alert "Refining telescope position..."
    $AUFFSET $1 $2
}

checkSlit
checkClouds

if [ -t 0 ]; then
    point $*
else
    point `cat`
fi